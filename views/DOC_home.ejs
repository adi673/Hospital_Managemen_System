<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HMS</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            display: flex;
            min-height: 100vh;
            animation: fadeIn 2.5s ease-in;
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        #header {
            background-color: #2c3e50;
            color: #ffffff;
            text-align: center;
            padding: 20px;
        }

        #header a {
            color: inherit;
            text-decoration: inherit;
        }

        a {
            text-decoration: none;
        }

        #sidebar {
            width: 300px;
            background-color: #2c3e50;
            padding-top: 77px;
            color: #ffffff;
            display: flex;
            flex-direction: column;
        }

        .sidebar-button {
            padding: 20px 24px;
            cursor: pointer;
            transition: background-color 0.3s;
            font-size: 20px;
        }

        .sidebar-button:hover {
            background-color: #838080;
        }

        .sidebar-button:not(:last-child) {
            margin-bottom: 5px;
        }

        #main {
            flex: 1;
            padding: 0px;
        }

        .main-content {
            text-align: center;
        }

        .main-content2 {
            background-color: #2c3e50;
            color: azure;
            text-align: center;
        }

        .main-heading {
            color: #2c3e50;
        }

        h1, h2 {
            font-size: 50px;
            margin-top: 0;
            padding-top: 10px;
            padding-bottom: 10px;
        }

        .flash-message {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
            width: 300px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 4px;
            overflow: hidden;
            animation: slideIn 0.5s ease-out forwards;
        }

        @keyframes slideIn {
            from { right: -320px; }
            to { right: 20px; }
        }

        .alert {
            padding: 10px;
            color: #fff;
            text-align: center;
            margin: 0;
        }

        .alert-danger {
            background-color: #e53e3e;
        }

        .alert-success {
            background-color: #38a169;
        }

        .timer-strip {
            height: 4px;
            background-color: #2c3e50;
            width: 100%;
            animation: decreaseWidth 4.5s linear forwards;
        }

        @keyframes decreaseWidth {
            from { width: 100%; }
            to { width: 0%; }
        }
    </style>
</head>
<body>
    <header id="header">
        <a href="/"><h3></h3></a>
    </header>
    <% if (messages.error || messages.success) { %>
        <div id="flash-message" class="flash-message">
            <% if (messages.error) { %>
                <div class="alert alert-danger"><%= messages.error %></div>
            <% } %>
            <% if (messages.success) { %>
                <div class="alert alert-success"><%= messages.success %></div>
            <% } %>
            <div class="timer-strip"></div>
        </div>
    <% } %>
    <div id="sidebar">
        <a href="/viewAppointments?email=<%= email %>" class="sidebar-button">Appointments</a>
        <a href="/viewPatients?email=<%= email %>" class="sidebar-button">View Patients</a>
        <a href="/Doc_settings?email=<%= email %>" class="sidebar-button">Settings</a>
        <a href="/signout" class="sidebar-button">Sign Out</a>
    </div>
    <div id="main">
        <div class="main-content2">
            <h1>HMS</h1>
        </div>
        <div class="main-content">
            <h2 class="main-heading">Welcome Dr.<%= name %></h2>
        </div>
    </div>
    <script>
        window.onload = function() {
            const flashMessage = document.getElementById('flash-message');
            if (flashMessage) {
                setTimeout(function() {
                    flashMessage.style.opacity = '0';
                    setTimeout(function() {
                        flashMessage.style.display = 'none';
                    }, 500); // Wait an additional 500ms to completely hide after fading out
                }, 5000); // 5000 milliseconds = 5 seconds
            }
        };
    </script>
</body>
</html>
