<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Hospital Management System</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f5f5f5;
      animation: fadeIn 2.5s ease-in;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }

    h1 {
      text-align: center;
      margin-top: 50px;
      animation: slideInDown 2.5s ease-in-out;
      color: #2c3e50; /* Dark blue color */
    }

    @keyframes slideInDown {
      from {
        transform: translateY(-50px);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }

    form {
      max-width: 400px;
      margin: 20px auto;
      padding: 20px;
      background-color: #ffffff;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      animation: slideInUp 2.5s ease-in-out;
    }

    @keyframes slideInUp {
      from {
        transform: translateY(50px);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }

    label {
      display: block;
      margin-bottom: 10px;
      font-weight: bold;
    }

    select {
      width: 100%;
      padding: 10px;
      border-radius: 5px;
      border: 1px solid #ddd;
      box-sizing: border-box;
      transition: border-color 2s, box-shadow 2s;
    }

    select:focus {
      outline: none;
      border-color: #000000;
      box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
    }

    input[type="submit"] {
      width: 100%;
      padding: 10px;
      margin-top: 10px; /* Adjust the margin to move the button down */
      border-radius: 5px;
      background-color: #2c3e50; /* Dark blue color */
      color: #ffffff;
      border: none;
      cursor: pointer;
      transition: background-color 2s, color 2s;
    }

    input[type="submit"]:hover {
      background-color: #ffffff;
      color: #2c3e50; /* Dark blue color */
    }

    .flash-message {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 1000;
        width: 300px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border-radius: 4px;
        overflow: hidden;
        animation: slideIn 0.5s ease-out forwards;
    }

    @keyframes slideIn {
        from { right: -320px; }
        to { right: 20px; }
    }

    .alert {
        padding: 10px;
        color: #fff;
        text-align: center;
        margin: 0;
    }

    .alert-danger {
        background-color: #e53e3e; /* A deep red */
    }

    .alert-success {
        background-color: #38a169; /* A rich green */
    }

    .timer-strip {
        height: 4px;
        background-color: #FFD700;
        /* background-color: #FFD700 ; */
        width: 100%;
        animation: decreaseWidth 4.5s linear forwards;
    }

    @keyframes decreaseWidth {
        from { width: 100%; }
        to { width: 0%; }
    }
  </style>
</head>
<body>
  <h1>Welcome to the Hospital Management System</h1>
  <% if (messages.error || messages.success) { %>
    <div id="flash-message" class="flash-message">
        <% if (messages.error) { %>
            <div class="alert alert-danger"><%= messages.error %></div>
        <% } %>
        <% if (messages.success) { %>
            <div class="alert alert-success"><%= messages.success %></div>
        <% } %>
        <div class="timer-strip"></div>
    </div>
<% } %>
  <form id="loginForm" action="/login" method="POST">
    <label for="role">Choose your role:</label>
    <select id="role" name="role">
      <option value="new">New</option>
      <option value="doctor">Doctor</option>
      <option value="patient">Patient</option>
      <option value="admin">Admin</option>
    </select>
    <input type="submit" value="Submit">
  </form>
  <script>
    window.onload = function() {
         const flashMessage = document.getElementById('flash-message');
             if (flashMessage) {
                 setTimeout(function() {
                 flashMessage.style.opacity = '0';
                 setTimeout(function() {
                     flashMessage.style.display = 'none';
                 }, 500); // Wait an additional 500ms to completely hide after fading out
             }, 5000);  // 5000 milliseconds = 5 seconds
         }
     };
 </script>
</body>
</html>
