<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Page</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f5f5f5;
      animation: fadeIn 2.5s ease-in;
    }

    .app-bar {
      background-color: #2c3e50; /* Dark blue color */
      color: #ffffff;
      text-align: center;
      padding: 20px;
    }

    .app-bar h1 {
      margin: 0;
      font-size: 32px;
      font-family: 'Arial Black', sans-serif; /* Custom font */
    }

    .container {
      max-width: 800px;
      margin: 50px auto;
      background-color: #ffffff;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      animation: slideInUp 2.5s ease-in-out;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 20px;
    }

    h3 {
      margin-top: 0;
    }

    .admin-options {
      width: 100%;
      text-align: center;
      display: flex;
      justify-content: center; /* Center horizontally */
      margin-bottom: 50px;
    }

    .admin-option {
      flex-grow: 1; /* Stretch to fill available space */
      padding: 20px;
      background-color: #2c3e50; /* Dark blue color */
      color: #ffffff;
      border-radius: 5px;
      text-align: center;
      cursor: pointer;
      transition: background-color 0.3s, color 0.3s;
    }

    .admin-option:hover {
      background-color: #ffffff;
      color: #2c3e50; /* Dark blue color */
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }

    @keyframes slideInUp {
      from {
        transform: translateY(50px);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }

    /* Remove underline and change color of anchor links */
    a {
      text-decoration: none;
      color: inherit; /* Inherit the color from the parent element */
    }

    .flash-message {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 1000;
        width: 300px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border-radius: 4px;
        overflow: hidden;
        animation: slideIn 0.5s ease-out forwards;
    }

    @keyframes slideIn {
        from { right: -320px; }
        to { right: 20px; }
    }

    .alert {
        padding: 10px;
        color: #fff;
        text-align: center;
        margin: 0;
    }

    .alert-danger {
        background-color: #e53e3e; /* A deep red */
    }

    .alert-success {
        background-color: #38a169; /* A rich green */
    }

    .timer-strip {
        height: 4px;
        background-color: #2c3e50;
        /* background-color: #FFD700 ; */
        width: 100%;
        animation: decreaseWidth 4.5s linear forwards;
    }

    @keyframes decreaseWidth {
        from { width: 100%; }
        to { width: 0%; }
    }
  </style>
</head>
<body>
  <header class="app-bar">
    <h1>HMS - Admin</h1>
  </header>
  <% if (messages.error || messages.success) { %>
    <div id="flash-message" class="flash-message">
        <% if (messages.error) { %>
            <div class="alert alert-danger"><%= messages.error %></div>
        <% } %>
        <% if (messages.success) { %>
            <div class="alert alert-success"><%= messages.success %></div>
        <% } %>
        <div class="timer-strip"></div>
    </div>
<% } %>
  <div class="container">
    <h3>Admin Options:</h3>
    <div class="admin-options">
      <a href="/view_database">
        <div class="admin-option">View Database</div>
      </a>
      <a href="/Add_Doctor">
        <div class="admin-option">Create Doctor</div>
      </a>
    </div>
  </div>
  

  <script>
    window.onload = function() {
         const flashMessage = document.getElementById('flash-message');
             if (flashMessage) {
                 setTimeout(function() {
                 flashMessage.style.opacity = '0';
                 setTimeout(function() {
                     flashMessage.style.display = 'none';
                 }, 500); // Wait an additional 500ms to completely hide after fading out
             }, 5000);  // 5000 milliseconds = 5 seconds
         }
     };
 </script>
</body>
</html>
