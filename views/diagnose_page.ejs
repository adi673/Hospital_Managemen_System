<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Diagnose</title>
    <style>
        body {
            font-family: 'Lato', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }

        header {
            background: #2c3e50; /* Dark blue color */
            color: #ffffff;
            padding: 20px;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1;
        }

        h1 {
            margin: 0;
            font-size: 1.5rem;
        }

        .container {
            margin-top: 80px;
            padding: 20px;
            width: 80%;
            margin-left: auto;
            margin-right: auto;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        h4 {
            margin-top: 0;
            margin-bottom: 10px;
            font-size: 1.2rem;
            color: #333333; /* Darker color for better contrast */
        }

        textarea {
            width: calc(100% - 16px);
            height: 120px;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-family: 'Lato', sans-serif;
            resize: none;
            margin-bottom: 20px;
        }

        button {
            background-color: #2c3e50; /* Dark blue color */
            color: #ffffff;
            border: none;
            padding: 10px 20px;
            font-size: 1rem;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
        }

        button:hover {
            background-color: #34495e; /* Darker blue color on hover */
        }

        .flash-message {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
            width: 300px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 4px;
            overflow: hidden;
            animation: slideIn 0.5s ease-out forwards;
        }

        @keyframes slideIn {
            from { right: -320px; }
            to { right: 20px; }
        }

        .alert {
            padding: 10px;
            color: #fff;
            text-align: center;
            margin: 0;
        }

        .alert-danger {
            background-color: #e53e3e; /* A deep red */
        }

        .alert-success {
            background-color: #38a169; /* A rich green */
        }

        .timer-strip {
            height: 4px;
            background-color: #2c3e50;
            width: 100%;
            animation: decreaseWidth 4.5s linear forwards;
        }

        @keyframes decreaseWidth {
            from { width: 100%; }
            to { width: 0%; }
        }
    </style>
</head>
<body>
    <header>
        <a href="/" style="color: inherit; text-decoration: inherit;">
            <h1>HMS</h1>
        </a>
    </header>
    <% if (messages.error || messages.success) { %>
        <div id="flash-message" class="flash-message">
            <% if (messages.error) { %>
                <div class="alert alert-danger"><%= messages.error %></div>
            <% } %>
            <% if (messages.success) { %>
                <div class="alert alert-success"><%= messages.success %></div>
            <% } %>
            <div class="timer-strip"></div>
        </div>
    <% } %>
    <div class="container">
        <form action="submitDiagnosis?id=<%= appointment_id %>" method="post">
            <h4>Diagnosis <%= appointment_id %></h4>
            <textarea name="diagnosis" placeholder="Enter Diagnosis" required></textarea>
            <h4>Prescription</h4>
            <textarea name="prescription" placeholder="Enter Prescription" required></textarea>
            <button type="submit">Submit Diagnosis</button>
        </form>
    </div>
    <script>
        window.onload = function() {
            const flashMessage = document.getElementById('flash-message');
            if (flashMessage) {
                setTimeout(function() {
                    flashMessage.style.opacity = '0';
                    setTimeout(function() {
                        flashMessage.style.display = 'none';
                    }, 500); // Wait an additional 500ms to completely hide after fading out
                }, 5000);  // 5000 milliseconds = 5 seconds
            }
        };
    </script>
</body>
</html>
