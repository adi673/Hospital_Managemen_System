<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HMS</title>
    <style>
       /* CSS styling */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f5f5f5;
}

.main-header {
    background-color: #2c3e50;
    color: #ffffff;
    text-align: center;
    padding: 20px;
}

h1 {
    margin: 0;
}
.container {
    max-width: 800px;
    margin: 50px auto;
    padding: 20px;
}

.panel {
    color: #2c3e50;
    background-color: #ffffff;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 20px;
    margin-bottom: 20px;
}

.panel h2 {
    margin-top: 0;
    color: #2c3e50;
}

table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 10px;
}

th, td {
    padding: 8px;
    text-align: left;
    border-bottom: 1px solid #ddd;
}

th {
    background-color: #f2f2f2;
}

strong {
    font-weight: bold;
}

hr {
    border: none;
    border-top: 1px solid #ddd;
    margin: 20px 0;
}

.back-button {
    text-align: center;
    margin-top: 20px;
}

.back-button a {
    display: inline-block;
    background-color: #2c3e50;
    color: #ffffff;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
    cursor: pointer;
}

.back-button a:hover {
    background-color: #34495e;
}

    </style>
</head>
<body>
    <header class="main-header">
        <h1>HMS</h1>
    </header>
    <div class="container">
        <div class="panel">
            <h2>Patient Information</h2>
            <table>
                <tbody>
                    <% medicalHistory.forEach(entry => { %>
                        <tr>
                            <th>Name</th>
                            <td><%= entry.name %></td>
                            <th>Email</th>
                            <td><%= entry.email %></td>
                        </tr>
                        <tr>
                            <th>Gender</th>
                            <td><%= entry.gender %></td>
                            <th>Address</th>
                            <td><%= entry.address %></td>
                        </tr>
                        <tr>
                            <th>Conditions</th>
                            <td colspan="3"><%= entry.conditions %></td>
                        </tr>
                        <tr>
                            <th>Surgeries</th>
                            <td colspan="3"><%= entry.surgeries %></td>
                        </tr>
                        <tr>
                            <th>Medications</th>
                            <td colspan="3"><%= entry.medication %></td>
                        </tr>
                        <tr></tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <hr>
        <div class="panel">
            <h2>Doctor's Visit</h2>
            <table>
                <tbody>
                    <% appointments.forEach(entry => { %>
                        <tr>
                            <th>Date</th>
                            <td><%= entry.date %></td>
                            <th>Doctor</th>
                            <td><%= entry.doctor %></td>
                        </tr>
                        <tr>
                            <th>Concerns</th>
                            <td><%= entry.concerns %></td>
                            <th>Symptoms</th>
                            <td><%= entry.symptoms %></td>
                        </tr>
                        <tr>
                            <th>Diagnosis</th>
                            <td colspan="3"><%= entry.diagnosis %></td>
                        </tr>
                        <tr>
                            <th>Prescription</th>
                            <td colspan="3"><%= entry.prescription %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
    <div class="back-button">
        <!-- <a id="dashboardLink" href="#">Go Back</a> -->
    </div>
